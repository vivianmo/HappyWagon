            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/stonexlarge"
                android:id="@+id/b13" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="@dimen/stonexlarge"
            android:layout_height="match_parent"
            android:id="@+id/c5" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/stonexlarge"
                android:id="@+id/b4" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/stonexlarge"
                android:id="@+id/b9" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/stonexlarge"
                android:id="@+id/b14" />
        </LinearLayout>

    </LinearLayout>



</RelativeLayout>

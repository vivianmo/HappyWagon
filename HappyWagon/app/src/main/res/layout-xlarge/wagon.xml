            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="@dimen/stonexlarge"
            android:layout_height="match_parent"
            android:id="@+id/ct5" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/stonexlarge"
                android:id="@+id/t4" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/stone4"
                    android:src="@drawable/stone6"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:padding="@dimen/stonepaddingxlarge"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:tag="stone1" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/stonexlarge"
                android:id="@+id/t9" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/stone9"
                    android:src="@drawable/stone6"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:padding="@dimen/stonepaddingxlarge"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/stonexlarge"
                android:id="@+id/t14" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/stone14"
                    android:src="@drawable/stone6"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:padding="@dimen/stonepaddingxlarge"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />
            </FrameLayout>
        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/bottom_container"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="false"
        android:padding="@dimen/wagonpaddingxlarge"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="@dimen/stonexlarge"
            android:layout_height="match_parent"
            android:id="@+id/c1">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/stonexlarge"
                android:id="@+id/b0"></FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/stonexlarge"
                android:id="@+id/b5"></FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/stonexlarge"
                android:id="@+id/b10" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="@dimen/stonexlarge"
            android:layout_height="match_parent"
            android:id="@+id/c2">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/stonexlarge"
                android:id="@+id/b1" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/stonexlarge"

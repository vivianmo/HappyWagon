                android:layout_height="@dimen/stonexlarge"
                android:id="@+id/b2" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/stonexlarge"
                android:id="@+id/b7" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/stonexlarge"
                android:id="@+id/b12" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="@dimen/stonexlarge"

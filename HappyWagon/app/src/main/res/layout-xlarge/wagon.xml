        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:id="@+id/top_container"
        android:layout_height="wrap_content"
        android:padding="@dimen/wagonpaddingxlarge"
        android:layout_above="@id/bottom_container"
        android:gravity="center">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="@dimen/stonexlarge"
            android:layout_height="match_parent"
            android:id="@+id/ct1">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/stonexlarge"
                android:id="@+id/t0">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/stone0"
                    android:src="@drawable/stone6"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:padding="@dimen/stonepaddingxlarge"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:tag="stone1"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/stonexlarge"
                android:id="@+id/t5">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/stone5"
                    android:src="@drawable/stone6"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:padding="@dimen/stonepaddingxlarge"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/stonexlarge"
                android:id="@+id/t10" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/stone10"
                    android:src="@drawable/stone6"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:padding="@dimen/stonepaddingxlarge"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="@dimen/stonexlarge"
            android:layout_height="match_parent"
            android:id="@+id/ct2">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/stonexlarge"
                android:id="@+id/t1" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/stone1"
                    android:src="@drawable/stone6"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:padding="@dimen/stonepaddingxlarge" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/stonexlarge"
                android:id="@+id/t6" >

                <ImageView
